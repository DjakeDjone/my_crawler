{
    "manifest_version": 2,
    "name": "Söker-Crawler",
    "version": "1.0",
    "description": "Indexes all visited pages to the Söker search engine.",
    "icons": {
        "48": "icons/crawler-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "crawler.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "48": "icons/crawler-48.png"
        },
        "default_title": "Whereami?",
        "default_popup": "popup/crawl_options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "data_collection_permissions": {
                "required": ["browsingActivity"]
            }
        }
    }
}